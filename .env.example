# Mosaic Project - Root Environment Variables
# Copy this to .env and fill in your values

# ===== SHARED =====
# These are used by both Rails and Python services

# Database (shared PostgreSQL)
DATABASE_URL=postgresql://localhost/honeybee_development

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-7-sonnet-20250219

# Inter-service authentication
AI_SERVICE_API_KEY=development-key-change-in-production

# ===== RAILS (HoneyBee) =====
RAILS_ENV=development
RAILS_LOG_LEVEL=info
SECRET_KEY_BASE=

# Python AI Service URL
AI_SERVICE_URL=http://localhost:8000

# ATS Integrations
ASHBY_API_KEY=
GREENHOUSE_API_KEY=

# ===== PYTHON (AI Service) =====
ENV=development

# Rails URL (for webhooks)
RAILS_API_URL=http://localhost:3000
RAILS_API_TOKEN=development-key-change-in-production

# Logging
SQL_ECHO=false
LOG_LEVEL=INFO

# ===== MONITORING (Optional) =====
SENTRY_DSN=

# ===== DEVELOPMENT TOOLS =====
# Set to true to see SQL queries
SQL_ECHO=false
