# Python AI Service Environment Variables

# Environment
ENV=development

# Database (shared with Rails)
DATABASE_URL=postgresql://localhost/honeybee_development

# Rails API
RAILS_API_URL=http://localhost:3000
RAILS_API_TOKEN=development-key

# AI Service API Key (for Rails to authenticate)
AI_SERVICE_API_KEY=development-key

# Anthropic Claude 4.5 Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here
DEFAULT_FAST_MODEL=claude-haiku-4-5-20251022
DEFAULT_PREMIUM_MODEL=claude-sonnet-4-5-20250929

# Performance Settings
ANTHROPIC_TIMEOUT=30
ANTHROPIC_MAX_RETRIES=3
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.3

# Escalation Configuration
LOW_CONFIDENCE_THRESHOLD=0.6
ENABLE_AUTO_ESCALATION=true
MAX_ESCALATION_ATTEMPTS=2

# Cost Tracking
TRACK_TOKEN_USAGE=true
TRACK_COST_PER_REQUEST=true

# Sentry (optional)
SENTRY_DSN=

# Logging
SQL_ECHO=false
LOG_LEVEL=INFO

# Redis (optional, for agent communication)
REDIS_URL=redis://localhost:6379/0
